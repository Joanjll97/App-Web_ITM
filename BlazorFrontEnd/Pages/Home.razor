@page "/"
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Home - Universidad</PageTitle>

<h1>Vigilancia y Control de Universidades</h1>

<nav class="navbar">
    <ul>
        <li><NavLink href="/">Inicio</NavLink></li>
        <li><NavLink href="/about">Acerca de</NavLink></li>
        <li><NavLink href="/courses">Cursos</NavLink></li>
        <li><NavLink href="/contact">Contacto</NavLink></li>
        <li><NavLink href="/universidades">Universidades</NavLink></li>
    </ul>
</nav>

<div class="dropdowns">
    <h2>Seleccione una opción</h2>
    
    <div>
        <label for="faculty">Facultad:</label>
        <select id="faculty" @bind="selectedFaculty">
            <option value="">Seleccione una facultad</option>
            <option value="Ingeniería">Ingeniería</option>
            <option value="Ciencias Sociales">Ciencias Sociales</option>
            <option value="Humanidades">Humanidades</option>
            <option value="Ciencias de la Salud">Ciencias de la Salud</option>
        </select>
    </div>

    <div>
        <label for="courses">Cursos:</label>
        <select id="courses" @bind="selectedCourse" disabled="@string.IsNullOrWhiteSpace(selectedFaculty)">
            <option value="">Seleccione un curso</option>
            @if (selectedFaculty == "Ingeniería")
            {
                <option value="Programación">Programación</option>
                <option value="Circuitos Eléctricos">Circuitos Eléctricos</option>
            }
            else if (selectedFaculty == "Ciencias Sociales")
            {
                <option value="Psicología">Psicología</option>
                <option value="Sociología">Sociología</option>
            }
            else if (selectedFaculty == "Humanidades")
            {
                <option value="Filosofía">Filosofía</option>
                <option value="Literatura">Literatura</option>
            }
            else if (selectedFaculty == "Ciencias de la Salud")
            {
                <option value="Medicina">Medicina</option>
                <option value="Enfermería">Enfermería</option>
            }
        </select>
    </div>

    <div>
        <label for="year">Año:</label>
        <select id="year" @bind="selectedYear">
            <option value="">Seleccione un año</option>
            <option value="2021">2021</option>
            <option value="2022">2022</option>
            <option value="2023">2023</option>
        </select>
    </div>
</div>

<div class="login">
    <h2>Iniciar Sesión</h2>
    <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
        <DataAnnotationsValidator />
        <div>
            <label for="username">Usuario:</label>
            <InputText id="username" @bind-Value="loginModel.Username" />
        </div>
        <div>
            <label for="password">Contraseña:</label>
            <InputText id="password" type="password" @bind-Value="loginModel.Password" />
        </div>
        <button type="submit">Iniciar Sesión</button>
    </EditForm>
</div>



@code {
    private string selectedFaculty;
    private string selectedCourse;
    private string selectedYear;

    private LoginModel loginModel = new LoginModel();

    private void HandleLogin()
    {
        // Lógica para manejar el inicio de sesión
        Console.WriteLine($"Usuario: {loginModel.Username}, Contraseña: {loginModel.Password}");
    }

    public class LoginModel
    {
        public string Username { get; set; }
        public string Password { get; set; }
    }
}
